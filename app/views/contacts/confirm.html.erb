<div class="container">
  <div class="row">
   <div class="col-lg-12">

   <h3>投稿内容確認画面</h3>

    <%= form_with(model: @contact, url: contacts_path, local: :true) do |form| %>
      <%= form.hidden_field :title %>
      <%= form.hidden_field :content %>
      <%= form.hidden_field :image_cache %>

       <p>件名:<%= @contact.title %></p>
       <p>本文:<%= @contact.content %></p>
       <p>画像:</p>
       <p><%= image_tag(@contact.image) %></p>
       <%= form.submit "投稿", class: 'btn btn-default btn-sm btn-success' %>
    <% end %>
    <br>
    <%= form_with(model: @contact, url: new_contact_path, local: :true, method: 'get') do |form| %>
       <%= form.hidden_field :title %>
       <%= form.hidden_field :content %>
       <%= form.hidden_field :image_cache %>
       <%= form.submit "戻る", name: 'back' , class: 'btn btn-default btn-sm btn-default' %>
    <% end %>
    </div>
  </div>
</div>