<%= form_with(model: [contact, response]) do |form| %>
  <% if response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(response.errors.count, "") %>件のエラーがあります。</h2>
      <ul>
      <% response.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_area :content, placeholder: '返信する', class: 'form-control', rows: "3" %>
  </div>
  <br>
  <div class="actions">
  <%= form.submit "返信する", class: 'btn btn-default btn-sm btn-success' %>
  </div>
<% end %>
<br>
