<div class="container">
  <div class="row">
   <div class="col-lg-12">

   <h1>ログイン</h1>

      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
      <div class="form-group, col-md-6">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
      </div>
      <div class="form-group, col-md-6">
        <%= f.label :パスワード %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
      </div>
      <div class="form-group, col-md-6">
        <p><%= f.submit "ログイン", class: 'btn btn-default btn-sm btn btn-default' %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>