<div class="container">
  <div class="row">
    <div class="col-lg-12">

    <h1>サインアップ</h1>

    <%= form_with(model: @user, local: true) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <p class="alert alert-danger"><%= pluralize(@user.errors.count, "") %> 件のエラーがあります。</p>
          <ul class="alert_reason">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group, col-md-6">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: '名前' %>
      </div>
      <div class="form-group, col-md-6">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
      </div>
      <div class="form-group, col-md-6">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード（6文字以上）' %>
      </div>
      <div class="form-group, col-md-6">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード（再入力）' %>
      </div>

      <div class="form-group, col-md-6">
        <p><%= f.file_field :icon, id: :feed_icon %></p>
        <p><%= f.hidden_field :icon_cache %><br></p>
      </div>
      <div class="form-group, col-md-6">
        <p><%= f.submit "利用開始登録", class: 'btn btn-default btn-sm btn btn-primary' %></p>
      </div>

    <% end %>

    </div>
  </div>
</div>
